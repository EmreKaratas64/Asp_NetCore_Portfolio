@model EntityLayer.Concrete.SocialMedia

@{
    ViewData["Title"] = "AddSocialMedia";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Sosyal Medya</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label class="form-control-label">Başlık</label>
                    <input type="text" class="form-control" name="Name" placeholder="Başlık" required>
                </div>
                <div class="form-group">
                    <label class="form-control-label">Link</label>
                    <input type="text" name="Url" class="form-control" placeholder="Link" required>
                </div>
                <div class="form-group">
                    <label class="form-control-label">İkon</label>
                    <input type="text" name="Icon" class="form-control" placeholder="İkon" required>
                </div>
                <br />
                <button type="submit" class="btn btn-outline-primary btn-icon-text">
                    <i class="mdi mdi-file-check btn-icon-prepend"></i> Yeni Sosyal Medya Ekle
                </button>
                <a href="/SocialMedia/Index/" class="btn btn-dark btn-icon-text">
                    <i class="mdi mdi-reload btn-icon-prepend"></i> İptal Et
                </a>
            </form>
        </div>
    </div>
</div>

