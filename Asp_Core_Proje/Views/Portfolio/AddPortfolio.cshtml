@model EntityLayer.Concrete.Portfolio
@{
    ViewData["Title"] = "AddPortfolio";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Proje</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label class="form-control-label">Proje Adı</label>
                    <input type="text" class="form-control" name="Name" placeholder="Proje adı" required>
                    @Html.ValidationMessageFor(x => x.Name)
                </div>
                <div class="form-group">
                    <label class="form-control-label">Proje Fotoğrafı</label>
                    <input type="text" name="ImageUrl" class="form-control" placeholder="Proje fotoğrafı" required>
                    @Html.ValidationMessageFor(x => x.ImageUrl)
                </div>
                <div class="form-group">
                    <label class="form-control-label">Proje Slider Fotoğrafı</label>
                    <input type="text" name="ImageUrl2" class="form-control" placeholder="Proje slider fotoğrafı" required>
                    @Html.ValidationMessageFor(x => x.ImageUrl2)
                </div>
                <div class="form-group">
                    <label class="form-control-label">Proje Linki</label>
                    <input type="text" name="ProjectUrl" class="form-control" placeholder="Proje linki" required>
                    @Html.ValidationMessageFor(x => x.ProjectUrl)
                </div>
                <div class="form-group">
                    <label class="form-control-label">Projede Kullanılan Dil (resim url)</label>
                    <input type="text" name="Platform" class="form-control" placeholder="Proje dili" required>
                    @Html.ValidationMessageFor(x => x.Platform)
                </div>
                <div class="form-group">
                    <label class="form-control-label">Proje Fiyatı</label>
                    <input type="text" name="Price" class="form-control" placeholder="Proje fiyatı" required>
                    @Html.ValidationMessageFor(x => x.Price)
                </div>
                <div class="form-group">
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Proje Durumu</label>
                        <div class="col-sm-4">
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input type="radio" class="form-check-input" name="Status" value=true id="membershipRadios1" checked> Bitti
                                </label>
                            </div>
                        </div>
                        <div class="col-sm-5">
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input type="radio" class="form-check-input" name="Status" id="membershipRadios2" value=false> Devam Ediyor
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-control-label">Proje Tamamlanma Oranı</label>
                    <input type="text" name="Value" class="form-control" placeholder="Proje tamamlanma oranı" required>
                    @Html.ValidationMessageFor(x => x.Value)
                </div>
                <br />
                <button type="submit" class="btn btn-outline-primary btn-icon-text">
                    <i class="mdi mdi-file-check btn-icon-prepend"></i> Yeni Proje Ekle
                </button>
                <a href="/Portfolio/Index/" class="btn btn-dark btn-icon-text" style="float:right">
                    <i class="mdi mdi-reload btn-icon-prepend"></i> İptal Et
                </a>
            </form>
        </div>
    </div>
</div>






