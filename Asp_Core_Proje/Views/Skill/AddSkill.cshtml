
@{
    ViewData["Title"] = "AddSkill";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Yetenek</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label class="form-control-label">Yetenek Adı</label>
                    <input type="text" class="form-control" name="Title" placeholder="Yetenek adı" required>
                </div>
                <div class="form-group">
                    <label class="form-control-label">Yetenek Değeri</label>
                    <input type="text" name="Value" class="form-control" placeholder="Yetenek değeri" required>
                </div>
                <div class="form-group">
                    <label class="form-control-label">Yetenek Resim</label>
                    <input type="text" name="Language" class="form-control" placeholder="Yetenek resim url" required>
                </div>
                <br />
                <button type="submit" class="btn btn-outline-primary btn-icon-text">
                    <i class="mdi mdi-file-check btn-icon-prepend"></i> Yeni Yetenek Ekle
                </button>
                <a href="/Skill/Index/" class="btn btn-dark btn-icon-text" style="float:right">
                    <i class="mdi mdi-reload btn-icon-prepend"></i> İptal Et
                </a>
            </form>
        </div>
    </div>
</div>
