@model EntityLayer.Concrete.Skill
@{
    ViewData["Title"] = "UpdateSkill";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yetenek Düzenle</h4>
            @using (Html.BeginForm("UpdateSkill", "Skill", FormMethod.Post))
            {
        <form class="forms-sample">
            <div class="form-group">
                @Html.HiddenFor(s => s.SkillID)
                <label class="form-control-label">Yetenek Adı</label>
                @Html.TextBoxFor(s => s.Title, new { @class = "form-control", required = "required", placeholder = "Yetenek adı" })
            </div>
            <div class="form-group">
                <label class="form-control-label">Yetenek Değeri</label>
                @Html.TextBoxFor(s => s.Value, new { @class = "form-control", required = "required", placeholder = "Yetenek değeri" })
            </div>
            <div class="form-group">
                <label class="form-control-label">Yetenek Değeri</label>
                @Html.TextBoxFor(s => s.Language, new { @class = "form-control", required = "required", placeholder = "Yetenek resim url" })
            </div>
            <br />
            <button type="submit" class="btn btn-outline-success btn-icon-text">
                <i class="mdi mdi-upload btn-icon-prepend"></i> Yetenek Düzenle
            </button>
            <a href="/Skill/Index/" class="btn btn-dark btn-icon-text" style="float:right">
                <i class="mdi mdi-reload btn-icon-prepend"></i> İptal
            </a>
        </form>
            }

        </div>
    </div>
</div>