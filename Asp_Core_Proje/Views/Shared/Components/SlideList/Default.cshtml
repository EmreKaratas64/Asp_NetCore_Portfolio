@using EntityLayer.Concrete
@model List<Portfolio>

<div class="col-md-6 col-xl-4 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Projeler Slayt</h4>
            <div class="owl-carousel owl-theme full-width owl-carousel-dash portfolio-carousel" id="owl-carousel-basic">
                @foreach (var item in Model)
                {
                    if (item.PortfolioID > 5)
                        break;
                    <div class="item">
                        <img src="@item.ImageUrl" alt="" style="height:250px">
                    </div>
                }
            </div>
            <div class="d-flex py-4">
                <div class="preview-list w-100">
                    <div class="preview-item p-0">
                        <div class="preview-thumbnail">
                            <img src="~/userimage/@ViewBag.Image" class="rounded-circle" alt="" style="height:45px">
                        </div>
                        <div class="preview-item-content d-flex flex-grow">
                            <div class="flex-grow">
                                <div class="d-flex d-md-block d-xl-flex justify-content-between">
                                    <h6 class="preview-subject">@ViewBag.Meslek</h6><br />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <p class="text-muted">Her zaman yeni projeler geliştirme yolunda devam. </p>
            <div class="progress progress-md portfolio-progress">
                <div class="progress-bar bg-primary" role="progressbar" style="width: 80%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </div>
    </div>
</div>
