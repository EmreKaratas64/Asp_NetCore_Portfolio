@model EntityLayer.Concrete.Service

@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hizmet Düzenle</h4>
            @using (Html.BeginForm("UpdateService", "Service", FormMethod.Post))
            {
                <form class="forms-sample">
                    <div class="form-group">
                        @Html.HiddenFor(s => s.ServiceID)
                        <label class="form-control-label">Hizmet Başlık</label>
                        @Html.TextBoxFor(s => s.Title, new { @class = "form-control", placeholder = "Hizmet başlık", required = "required" })
                        @Html.ValidationMessageFor(s => s.Title)
                    </div>
                    <div class="form-group">
                        <label class="form-control-label">Hizmet Resim</label>
                        @Html.TextBoxFor(s => s.ImageUrl, new { @class = "form-control", placeholder = "Hizmet resim url", required = "required" })
                        @Html.ValidationMessageFor(s => s.ImageUrl)
                    </div>
                    <br />
                    <button type="submit" class="btn btn-outline-success btn-icon-text">
                        <i class="mdi mdi-upload btn-icon-prepend"></i> Hizmeti Düzenle
                    </button>
                    <a href="/Service/Index/" class="btn btn-dark btn-icon-text" style="float:right">
                        <i class="mdi mdi-reload btn-icon-prepend"></i> İptal Et
                    </a>
                </form>
            }

        </div>
    </div>
</div>
