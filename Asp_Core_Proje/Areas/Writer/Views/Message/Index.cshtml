@using EntityLayer.Concrete
@model List<WriterMessage>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Gelen Kutusu</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Konu</th>
                            <th>Gönderen</th>
                            <th>Tarih</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            
                        <tr>
                            <th>@item.WriterMessageID</th>
                            <td>@item.Subject</td>
                            <th>@item.SenderName</th>
                            <td>@Convert.ToDateTime(item.Date).ToString("dd/MM/yyyy")</td>
                            <td><a class="btn btn-outline-primary" href="/Writer/Message/MessageDetails/@item.WriterMessageID">Detaylar</a></td>
                        </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

