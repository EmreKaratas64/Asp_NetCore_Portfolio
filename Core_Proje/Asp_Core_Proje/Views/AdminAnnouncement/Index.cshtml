@model EntityLayer.Concrete.Announcement

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
    string date_of_announcement = DateTime.Parse(Model.Date.ToString()).ToString("dd/MM/yyyy");
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Detay</h4>

            <form class="forms-sample">
                <div class="form-group">
                    @Html.HiddenFor(s => s.ID)
                    <label class="form-control-label">Başlık</label>
                    @Html.TextBoxFor(s => s.Title, new { @class = "form-control", placeholder = "Başlık" })
                </div>
                <div class="form-group">
                    <label class="form-control-label">Tarih</label>
                    @Html.TextBoxFor(modelItem => date_of_announcement, new { @class = "form-control", placeholder = "Tarih" })
                </div>
                <div class="form-group">
                    <label class="form-control-label">İçerik</label>
                    @Html.TextAreaFor(s => s.Content, new { @class = "form-control", placeholder = "İçerik", rows = "10" })
                </div>
                <br />
                <a href="/Dashboard/Index/" class="btn btn-outline-success btn-icon-text">
                    <i class="mdi mdi-arrow-left-bold-circle-outline"></i> Geri Dön
                </a>
            </form>
        </div>
    </div>
</div>

