@model EntityLayer.Concrete.Testimonial

@{
    ViewData["Title"] = "TestimonialDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Referans Düzenle</h4>
            @using (Html.BeginForm("UpdateTestimonial", "Testimonial", FormMethod.Post))
            {
        <form class="forms-sample">
            <div class="form-group">
                @Html.HiddenFor(s => s.TestimonialID)
                <label class="form-control-label">Referans isim soyisim</label>
                @Html.TextBoxFor(s => s.ClientName, new { @class = "form-control", placeholder = "isim soyisim", required = "required" })
            </div>
            <div class="form-group">
                <label class="form-control-label">Unvan / Şirket</label>
                @Html.TextBoxFor(s => s.Company, new { @class = "form-control", placeholder = "Unvan / şirket", required = "required" })
            </div>
            <div class="form-group">
                <label class="form-control-label">Resim yolu</label>
                @Html.TextBoxFor(s => s.ImageUrll, new { @class = "form-control", placeholder = "Resim yolu", required = "required" })
            </div>
            <div class="form-group">
                <label class="form-control-label">Yorum</label>
                @Html.TextAreaFor(s => s.Comment, new { @class = "form-control", placeholder = "Yorum", rows = "10", required = "required" })
            </div>
            <br />
            <div class="form-group">
                <input type="checkbox" asp-for="@Model.Active" style="width:17px;height:17px; margin:5px" />  
                <label>Referansı aktif yap</label>
            </div>
            <br />
            <button type="submit" class="btn btn-outline-success btn-icon-text">
                <i class="mdi mdi-upload btn-icon-prepend"></i> Referans Düzenle
            </button>
            <a href="/Testimonial/Index/" class="btn btn-dark btn-icon-text">
                <i class="mdi mdi-reload btn-icon-prepend"></i> İptal Et
            </a>
        </form>
            }


        </div>
    </div>
</div>

