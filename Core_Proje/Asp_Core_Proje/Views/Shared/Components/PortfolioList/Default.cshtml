@using EntityLayer.Concrete
@model List<Portfolio>

<style>

    .grid-item {
        width: 33%;
    }


    @@media screen and (max-width: 600px) {
        .grid-item {
            width: 50%;
        }
    }


    @@media screen and (max-width: 500px) {
        .grid-item {
            width: 100%;
        }
    }
</style>

<div class="section px-2 px-lg-4 pt-5" id="portfolio">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="marker marker-center">Projelerim </h2>
        </div>
        <div class="grid bp-gallery pb-3" data-aos="zoom-in-up" data-aos-delay="100">
            <div class="grid-sizer"></div>
            @foreach (var item in Model)
            {
                <div class="grid-item">
                    <a href="@item.ProjectUrl">
                        <figure class="portfolio-item">
                            <img src="@item.ImageUrl" data-bp="@item.ImageUrl2" />
                            <figcaption>
                                <h4 class="h5 mb-0">@item.Name (GitHub'a gitmek için tıklayın)</h4>
                            </figcaption>
                        </figure>
                    </a>
                </div>
            }
        </div>
    </div>
</div>
