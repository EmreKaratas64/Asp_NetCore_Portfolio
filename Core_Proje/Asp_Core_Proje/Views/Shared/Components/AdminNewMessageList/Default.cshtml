@using EntityLayer.Concrete
@model List<WriterMessage>

<li class="nav-item dropdown border-left">
    <a class="nav-link count-indicator dropdown-toggle" id="messageDropdown" href="#" data-toggle="dropdown" aria-expanded="false">
        <i class="mdi mdi-email"></i>
        <span class="count bg-success"></span>
    </a>
    <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
        <h6 class="p-3 mb-0">Mesajlar</h6>
        <div class="dropdown-divider"></div>
        @foreach (var item in Model)
        {
            <a class="dropdown-item preview-item" href="/AdminMessage/ShowReceiverMessage/@item.WriterMessageID">
                <div class="preview-thumbnail">
                    <img src="~/corona-free-dark-bootstrap-admin-template-1.0.0/template/assets/images/faces-clipart/pic-8.png" alt="image" class="rounded-circle profile-pic">
                </div>
                <div class="preview-item-content">
                    <p class="preview-subject ellipsis mb-1">@item.SenderName bir mesaj</p>
                    <p class="text-muted mb-0"> @DateTime.Parse(item.Date.ToString()).ToString("dd/MM/yyyy") </p>
                </div>
            </a>
        }
        <div class="dropdown-divider"></div>
        <a href="/AdminMessage/ReceiverMessageList/">
            <p class="p-3 mb-0 text-center">Tüm Mesajları Gör</p>
        </a>
    </div>
</li>