@using EntityLayer.Concrete
@model List<Portfolio>

@{
    string project_status = "InProgress";
    string project_st_class = "text-warning";
}

<div class="col-md-8 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex flex-row justify-content-between">
                <h4 class="card-title mb-1">Tamamlanmamış Projeler</h4>
                <p class="text-muted mb-1">Proje Durumu</p>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="preview-list">
                        @foreach (var item in Model)
                        {
                            if (int.Parse(item.Value.ToString()) > 80)
                            {
                                project_status = "Yakın";
                                project_st_class = "text-primary";
                            }
                            else
                            {
                                project_status = "Gelişmede";
                                project_st_class = "text-warning";
                            }

                            <div class="preview-item border-bottom">
                                <div class="preview-thumbnail">
                                    <div class="preview-icon rounded-circle">
                                        <img src="@item.Platform" alt="Programlama Dili" />
                                    </div>
                                </div>
                                <div class="preview-item-content d-sm-flex flex-grow">
                                    <div class="flex-grow">
                                        <h6 class="preview-subject">@item.Name</h6>
                                        <p class="text-muted mb-0">Proje Fiyatı: @item.Price ₺</p>
                                    </div>
                                    <div class="mr-auto text-sm-right pt-2 pt-sm-0">
                                        <p class="text-muted">Proje Durumu: <span class="@project_st_class">@project_status</span></p>
                                        <p class="text-muted mb-0">Tamamlanma Oranı: %@item.Value </p>
                                    </div>
                                </div>
                            </div>
                        }



