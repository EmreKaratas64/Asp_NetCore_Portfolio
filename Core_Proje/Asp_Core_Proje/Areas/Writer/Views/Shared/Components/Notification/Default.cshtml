@using EntityLayer.Concrete
@model List<Announcement>

@{
    string bg_class = "bg-info";
}


<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="notificationDropdown">
    <p class="mb-0 font-weight-normal float-left dropdown-header">Bildirimler</p>
    @foreach (var item in Model)
    {
        if (item.status.ToLower() == "yeni")
        {
            bg_class = "bg-warning";
        }
        else if (item.status.ToLower() == "eski")
        {
            bg_class = "bg-success";
        }
        else if (item.status.ToLower() == "proje")
        {
            bg_class = "bg-info";
        }
        else
        {
            bg_class = "bg-danger";
        }

        <a href="/Writer/Default/AnnouncementDetails/@item.ID" class="dropdown-item preview-item">
          
            <div class="preview-thumbnail">
                <div class="preview-icon @bg_class">
                    <i class="ti-info-alt mx-0"></i>
                </div>
            </div>
         
            <div class="preview-item-content">
                <h6 class="preview-subject font-weight-normal">@item.Title</h6>
                <p class="font-weight-light small-text mb-0 text-muted">
                    @DateTime.Parse(item.Date.ToString()).ToString("dd/MM/yyyy");
                </p>
            </div>
        </a>
    }
</div>