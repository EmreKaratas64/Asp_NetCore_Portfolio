
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}


<script>

    function refreash() {
        location.reload();
    }

</script>

@if (TempData["refrencesuccess"] != null)
{
    <br />
    <div class="alert alert-dismissible" style="background: #29a649; color: white">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true" onclick="refreash()">&times;</button>
        <h5><i class="fas fa-check-square"></i> Bilgilendirme!</h5>
        @TempData["refrencesuccess"]
    </div>
}

<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="row">
            <div class="col-12 col-xl-8 mb-4 mb-xl-0">
                <h3 class="font-weight-bold">Hoşgeldin @ViewBag.Namee</h3>
                <h6 class="font-weight-normal mb-0">Yazar dashboard panelindesin duyuruları görmek için <span class="text-primary"><a href="/Writer/Default/Index/" style="text-decoration:none">hemen tıkla!</a></span></h6>
            </div>
            <div class="col-12 col-xl-4">
                <div class="justify-content-end d-flex">
                    <div class="dropdown flex-md-grow-1 flex-xl-grow-0">
                        <button class="btn btn-sm btn-light bg-white" type="button">
                            @DateTime.Now.ToShortDateString()
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card tale-bg">
            <div class="card-people mt-auto">
                <img src="~/skydash/images/dashboard/people.svg" alt="people">
                <div class="weather-info">
                    <div class="d-flex">
                        <div>
                            <h2 class="mb-0 font-weight-normal"><i class="icon-sun mr-2"></i>@ViewBag.havaDurumu<sup>C</sup></h2>
                        </div>
                        <div class="ml-2">
                            <h4 class="location font-weight-normal">Uşak</h4>
                            <h6 class="font-weight-normal">Türkiye</h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 grid-margin transparent">
        <div class="row">
            <div class="col-md-6 mb-4 stretch-card transparent">
                <div class="card card-tale">
                    <div class="card-body">
                        <p class="mb-4">Gelen Mesaj Sayısı</p>
                        <p class="fs-30 mb-2">@ViewBag.GelenMesaj</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-4 stretch-card transparent">
                <div class="card card-dark-blue">
                    <div class="card-body">
                        <p class="mb-4">Duyuru Sayısı</p>
                        <p class="fs-30 mb-2">@ViewBag.DuyuruSayisi</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 mb-4 mb-lg-0 stretch-card transparent">
                <div class="card card-light-blue">
                    <div class="card-body">
                        <p class="mb-4">Kullanıcı Sayısı</p>
                        <p class="fs-30 mb-2">@ViewBag.KullaniciSayisi</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 stretch-card transparent">
                <div class="card card-light-danger">
                    <div class="card-body">
                        <p class="mb-4">Gönderilen Mesaj Sayısı</p>
                        <p class="fs-30 mb-2">@ViewBag.GonderilenMesaj</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="row">

    @await Component.InvokeAsync("WriterDashboardInBox")

    <div class="col-md-4 stretch-card grid-margin">
        <div class="row">

            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <p class="card-title">Projelerde Kullanılan Diller</p>
                        <div class="charts-data">
                            <div class="mt-3">
                                <p class="mb-0">C#</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="progress progress-md flex-grow-1 mr-4">
                                        <div class="progress-bar bg-info" role="progressbar" style="width: 90%" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                    <p class="mb-0">90%</p>
                                </div>
                            </div>
                            <div class="mt-3">
                                <p class="mb-0">.Net Core</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="progress progress-md flex-grow-1 mr-4">
                                        <div class="progress-bar bg-success" role="progressbar" style="width: 70%" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                    <p class="mb-0">70%</p>
                                </div>
                            </div>
                            <div class="mt-3">
                                <p class="mb-0">Javascript</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="progress progress-md flex-grow-1 mr-4">
                                        <div class="progress-bar bg-danger" role="progressbar" style="width: 60%" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                    <p class="mb-0">60%</p>
                                </div>
                            </div>
                            <div class="mt-3">
                                <p class="mb-0">Jquery</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="progress progress-md flex-grow-1 mr-4">
                                        <div class="progress-bar bg-warning" role="progressbar" style="width: 65%" aria-valuenow="65" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                    <p class="mb-0">65%</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-12 stretch-card grid-margin grid-margin-md-0">
                <div class="card data-icon-card-primary">
                    <div class="card-body">
                        <p class="card-title text-white">Konferans ve Workshop'lar</p>
                        <div class="row">
                            <div class="col-8 text-white">
                                <h3>123</h3>
                                <p class="text-white font-weight-500 mb-0">
                                    Toplamda veriler konferans ve workshop'ların
                                    sayıları yukarıda istatistik olarak verilmiştir.
                                </p>
                            </div>
                            <div class="col-4 background-icon">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    @await Component.InvokeAsync("WriterDashboardNotifications")

</div>